{% block body %}

    {% include 'header.html.twig' %}






    <div class="container">

        <div class="row text-center py-5">
            {% for Prods in Product %}
            <div class="col-md-3 col-sm-6 my-3 my-md-0" style="padding-bottom: 2%;">

                <form action="{{ path('product.detail',{'id':Prods.id})}}" method="POST">
                    <div class="card shadow">


                        <div>
                            {% if Product is defined %}
                                <img src="{{ Prods.image }}" alt="Image1" class="img-fluid card-img-top">
                            {% endif %}
                        </div>

                        <div class="card-body">
                            <h5 class="card-title"></h5>
                            <h6>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </h6>
                            <p class="card-text">
                                {{ Prods.product_name }}
                            </p>
                            <h5>
                                {% if Product is defined %}
                                    <small><s class="text-secondary">{{ Prods.product_price }}</s></small>
                                    <span class="price"></span>
                                {% endif %}

                            </h5>

                            <button type="submit" class="btn btn-warning my-3" name="add">Detail<i class="fas fa-shopping-cart"></i></button>

                            <input type='hidden' name='product_id' value='{{ Prods.id }}'>

                        </div>
                    </div>
                </form>

            </div>
            {% endfor %}
        </div>

        </div>



